@using SistemaTarefas.Context
@using SistemaTarefas.Entities
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
 
@model List<Tarefa>
@{
    ViewData["Title"] = "alinea8";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 
<!DOCTYPE html>
 
<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>Index</title>
</head>
<body>
<form method="post" asp-controller="L_TarefasFinalizadas" asp-action="alinea8">
    <span>Data abaixo da data final:</span><input type="date" name="datainicial"/>
    <span>Data acima da data final:</span><input type="date" name="datafinal"/>
    <input type="submit" value="Search"/>
    <br/>
    <br/>
    <table class="table">
        <tr>
            <th>ID Tarefa</th>
            <th>Data Inicial</th>
            <th>Data Final</th>
            <th>Descricao</th>
            <th>Estado</th>
            <th>ID Projeto</th>
        </tr>
        @foreach (Tarefa customer in Model)
        {
            @if (@customer.estado == "finalizado")
            {
                <tr>
                    <td>
                        @customer.id_tarefa
                    </td>
                    <td>
                        @customer.hora_inicio
                    </td>
                    <td>
                        @customer.hora_fim
                    </td>
                    <td>
                        @customer.descricao
                    </td>
                    <td>
                        @customer.estado
                    </td>
                    <td>
                        @customer.id_projeto
                    </td>
                </tr>
            }

        }
    </table>
</form>
</body>
</html>