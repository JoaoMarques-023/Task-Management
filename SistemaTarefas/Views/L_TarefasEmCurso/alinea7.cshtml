@using SistemaTarefas.Context
@using SistemaTarefas.Entities
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
 
@model List<Tarefa>
@{
    ViewData["Title"] = "alinea8";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 
<!DOCTYPE html>
 
<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>Index</title>
</head>
<body>
<form method="post" asp-controller="L_TarefasEmCurso" asp-action="alinea7">
    <br/>
    <br/>
    <table class="table">
        <tr>
            <th>ID Tarefa</th>
            <th>Descricao</th>
            <th>Estado</th>
            <th>ID Projeto</th>
            <th>nHoras</th>
        </tr>
        @foreach (Tarefa customer in Model)
        {
            <tr>
                    <td>
                        @customer.id_tarefa
                    </td>
                    <td>
                        @customer.descricao
                    </td>
                    <td>
                        @customer.estado
                    </td>
                    <td>
                        @customer.id_projeto
                    </td>
                <td>
                    @{
                        TimeSpan teste = (DateTime)customer.hora_fim - customer.hora_inicio;
                    }
                    @(Math.Round(teste.TotalHours, 0))
                </td>
                </tr>
        }
    </table>
</form>
</body>
</html>