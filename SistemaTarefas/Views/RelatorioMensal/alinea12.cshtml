@using SistemaTarefas.Context
@using SistemaTarefas.Entities
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
 
@model List<Tarefa>
@{
    ViewData["Title"] = "alinea12";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 
<!DOCTYPE html>
 
<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>Index</title>
</head>
<body>
<form method="post" asp-controller="RelatorioMensal" asp-action="alinea12">
    <span>Id do projeto:</span><input type="number" name="id"/>
    <span>Data a ver (pode ser usado qualquer dia dentro do mes pretendido):</span><input type="date" name="data"/>
    <input type="submit" value="Search"/>
    <br/>
    <br/>
    <table class="table">
        <tr>
            <th>ID Tarefa</th>
            <th>ID Utilizador</th>
            <th>Data Inicial</th>
            <th>Data Final</th>
            <th>Descricao</th>
            <th>Estado</th>
            <th>ID Projeto</th>
            <th>PrecoHora</th>
            <th>nHoras</th>
            <th>Dinheiroganho</th>
        </tr>
        @foreach (Tarefa customer in Model)
        {
            @if (@customer.estado == "finalizado")
            {
                <tr>
                    <td>
                        @customer.id_tarefa
                    </td>
                    <td>
                        @customer.id_utilizador
                    </td>
                    <td>
                        @customer.hora_inicio
                    </td>
                    <td>
                        @customer.hora_fim
                    </td>
                    <td>
                        @customer.descricao
                    </td>
                    <td>
                        @customer.estado
                    </td>
                    <td>
                        @customer.id_projeto
                    </td>
                    <td>
                        @customer.precohora
                    </td>
                    <td>
                        @{
                            TimeSpan teste = (DateTime)customer.hora_fim - customer.hora_inicio;
                        }
                        @(Math.Round(teste.TotalHours, 0))
                        
                    </td>
                    <td>
                        @(Math.Round(teste.TotalHours, 0)*24)
                    </td>
                    
                </tr>
            }

        }
    </table>
</form>
</body>
</html>