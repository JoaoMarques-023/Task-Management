@model SistemaTarefas.Entities.Tarefa

@{
    ViewData["Title"] = "Terminar";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var errors = ViewData["Errors"] as List<string> ?? new List<string>();
}

<h1>Editar</h1>

<h4>Tarefa</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id_tarefa" />
            <div class="form-group">
                <label asp-for="estado" class="control-label"></label>
                <select asp-for="estado" class ="form-control" asp-items="ViewBag.estado"></select>
                <span asp-validation-for="estado" class="text-danger"></span>
            </div> 
            <input type="hidden" asp-for="hora_inicio" />
            <div class="form-group">
                <label asp-for="hora_fim" class="control-label"></label>
                <input asp-for="hora_fim" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")" />
                <span asp-validation-for="hora_fim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="descricao" class="control-label"></label>
                <input asp-for="descricao" class ="form-control"/>
                <span asp-validation-for="descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="precohora" class="control-label"></label>
                <input asp-for="precohora" class ="form-control"/>
                <span asp-validation-for="precohora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="id_utilizador" class="control-label"></label>
                <select asp-for="id_utilizador" class ="form-control" value="null" asp-items="ViewBag.user"></select>
                <span asp-validation-for="id_utilizador" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="id_projeto" class="control-label"></label>
                <select asp-for="id_projeto" class ="form-control" value="null" asp-items="ViewBag.projeto"></select>
                <span asp-validation-for="id_projeto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <div style="color: red;">
                @foreach (var error in errors)
                {
                    <p>@error</p>
                }
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

